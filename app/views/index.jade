extends layouts/base.jade
block body
  h1 here we go
  -if form
    form(action="#{url_for('index')}", method="post")
      =form.squirrel(class_="shh")

      .form-group
        p.hint If you're married, give us your maiden name.
        =form.name.label()
        =form.name()

      .form-group
        =form.email.label()
        =form.email()

      .form-group
        =form.email_confirm.label()
        =form.email_confirm()

      .form-group
        =form.phone.label()
        =form.phone()

      .form-group
        =form.submit(class_="btn btn-primary")

  
  -else
    h2 Whar's the form?
